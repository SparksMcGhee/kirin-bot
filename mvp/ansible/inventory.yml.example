---
# This inventory file uses environment variables from .env
# Source your .env file before running Ansible: source ../.env
# Or use the ansible-playbook.sh wrapper script

all:
  children:
    kirin_servers:
      hosts:
        kirin-server:
          ansible_host: "{{ lookup('env', 'ANSIBLE_HOST') | default('your.server.ip.address') }}"
          ansible_user: "{{ lookup('env', 'ANSIBLE_USER') | default('your_username') }}"
          ansible_ssh_private_key_file: "{{ lookup('env', 'ANSIBLE_SSH_KEY') | default('~/.ssh/your_key') }}"
          # Optional: if using password authentication
          # ansible_password: "{{ lookup('env', 'ANSIBLE_PASSWORD') }}"

